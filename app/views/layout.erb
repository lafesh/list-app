    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script>
      $(document).ready(function() {
        $("#add").click(function(e){
          $(".items").append('<div>List Item: <input type="text" name="list[list_items][][item]">' + '<a class="waves-effect waves-light btn-small orange"><input type="button" value="delete" id="effect"></a></div>')
        });
        $(".items").on("click", "#effect", function(e){
          e.preventDefault(); $(this).parent('a').parent('div').remove();
        });
      });
    </script>

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">
      <h1>Lists - An Organizational Application</h1>

      <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
          <%= flash[type] %>
        </div>
      <% end %>
      <br>

        <%= yield %>


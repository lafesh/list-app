<div class="navbar">
    <a href="/lists">My Lists</a>
    <a href="/lists/new">Create New List</a>
    <a href="/lists/all">All Lists</a>
    <a href="/logout">Logout</a>
</div>

<h2>Update <%= @list.list_title %></h2>

<form action="/lists/<%= @list.id %>" method="post">
    <input type="hidden" name="_method" id="hidden" value="patch">
    List Title: <input type="text" name="list[list_title]" value="<%= @list.list_title %>">
    <div class="items">
    <% @list.list_items.each do |list| %>
        <div class="item"> List Item: <input type="text" name="list[list_items][][item]" value="<%= list.item %>"><a class="waves-effect waves-light btn-small orange"> <input type="button" value="delete" id="effect"></a><br><br></div>
    <% end %>
    </div>
    <a class="waves-effect waves-light btn-small orange"><input type="button" value=" Add List Item " id="add"></a>
    <a class="waves-effect waves-light btn-small orange"><input type="submit" value=" Update List "></a>
</form>
<div class="navbar">
    <a href="/lists">My Lists</a>
    <a href="/lists/new">Create New List</a>
    <a href="/lists/all">All Lists</a>
    <a href="/logout">Logout</a>
</div>

<h2><%= @list.list_title %></h2>
<% @list.list_item.each do |list| %>
    <ul><li><%= list %></li></ul>
<% end %>

List created on <%= @list.created_at.strftime("%A, %b %d, %Y") %> <br>
<% if @list.updated_at != @list.created_at %>
    List updated on <%= @list.updated_at.strftime("%A, %b %d, %Y") %>
<% end %>
<br>

<a href="/lists/<%= @list.id %>/edit"><button class="button">Edit List</button></a>

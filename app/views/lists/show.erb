<div class="navbar">
    <a href="/lists">My Lists</a>
    <a href="/lists/new">Create New List</a>
    <a href="/lists/all">All Lists</a>
    <a href="/settings">Settings</a>
    <a href="/logout">Logout</a>
</div>

<h2><%= @list.list_title %></h2>
<ul>
    <% @list.list_items.each do |list| %>
        <li><%= list.item %></li>
    <% end.reverse %>
</ul><br>

List created on <%= @list.created_at.strftime("%A, %b %d, %Y") %> <br>
<% if @list.updated_at != @list.created_at %>
    List Title updated on <%= @list.updated_at.strftime("%A, %b %d, %Y") %><br>
<% end %>

<% if @list.list_items.find {|item| item.updated_at != item.created_at} %>
    List Items updated on <%= item.updated_at.strftime("%A, %b %d, %Y") %><br>
<% end %>

<br><a href="/lists/<%= @list.id %>/edit"><button class="button">Edit List</button></a>
<form action="/lists/<%= @list.id %>/delete" method="post">
    <input type="hidden" id="hidden" name="_method" value="delete">
    <input type="submit" value="Delete List" id="delete">
</form>
